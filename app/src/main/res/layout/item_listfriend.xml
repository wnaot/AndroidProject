<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="7dp"
    android:layout_marginRight="5dp"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp">

    <RelativeLayout
        android:id="@+id/layoutListFriend"
        android:layout_width="match_parent"
        android:layout_height="60dp">

        <FrameLayout
            android:layout_width="70dp"
            android:layout_height="80dp"

            android:layout_marginStart="5dp"
            android:id="@+id/imageLayout">

            <com.google.android.material.imageview.ShapeableImageView
                android:id="@+id/item_imgViewLFriend"
                android:layout_width="58dp"
                android:layout_height="60dp"
                android:padding="5dp"
                android:scaleType="centerCrop"
                android:src="@drawable/dog"
                app:shapeAppearanceOverlay="@style/circular"
                app:strokeColor="#009688"
                app:strokeWidth="1dp">

            </com.google.android.material.imageview.ShapeableImageView>

            <ImageView
                android:id="@+id/img_on"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/circle_shape_onl"
                android:visibility="gone" />

            <ImageView
                android:id="@+id/img_off"
                android:layout_width="17dp"
                android:layout_height="17dp"
                android:layout_gravity="bottom|end"
                android:layout_marginRight="23dp"
                android:layout_marginBottom="2dp"
                android:src="@drawable/circle_shape_off"
                android:visibility="gone" />
        </FrameLayout>
        <TextView
            android:layout_centerVertical="true"
            android:id="@+id/item_nameLFriend"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="27dp"
            android:layout_marginTop="15dp"
            android:layout_marginEnd="12dp"
            android:layout_marginBottom="12dp"
            android:layout_toRightOf="@id/imageLayout"
            android:text="Kerry Lakin"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:textStyle="bold">

        </TextView>
    </RelativeLayout>

</androidx.cardview.widget.CardView>


