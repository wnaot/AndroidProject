<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:scrollbars="none"
    android:background="@color/white"
    tools:context=".ConfirmEmail">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="center_vertical"
        android:layout_marginStart="32dp"
        android:layout_marginEnd="32dp">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="179dp"
            android:layout_marginTop="37.33333dp"
            app:layout_constraintVertical_bias="0.5">

            <TextView
                android:id="@+id/textViewSignIn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/inter_extrabold"
                android:text="Confirm Email"
                android:textColor="#0C2EDF"
                android:textSize="32sp"
                android:textStyle="normal"

                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <EditText
                android:id="@+id/textConfirmCode"
                android:layout_width="match_parent"
                android:layout_height="42.677dp"
                android:layout_marginTop="20dp"
                android:autofillHints="autoFill"
                android:background="@drawable/rounded_edittext_bg"
                android:fontFamily="@font/inter_regular"
                android:hint="@string/code"
                android:inputType="text"
                android:paddingStart="10dp"
                android:textColor="@color/black"
                android:textSize="16sp"

                app:layout_constraintEnd_toEndOf="parent"

                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textViewSignIn"
                tools:ignore="RtlSymmetry" />


            <TextView
                android:id="@+id/btnResend"
                android:layout_width="105.333dp"
                android:layout_height="37.333dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_button_bg"
                android:fontFamily="@font/inter_extrabold"
                android:gravity="center"
                android:text="Resend"
                android:textColor="#0C2EDF"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.206"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textConfirmCode" />

            <TextView
                android:id="@+id/btnConfirm"
                android:layout_width="105.333dp"
                android:layout_height="37.333dp"
                android:layout_marginTop="24dp"
                android:background="@drawable/rounded_button_confirm"
                android:fontFamily="@font/inter_extrabold"
                android:gravity="center"
                android:text="Confirm"
                android:textColor="@color/white"
                android:textSize="16sp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="0.83"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@id/textConfirmCode" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</ScrollView>